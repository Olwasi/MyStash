#include <stdio.h>
//ENE212-0146-2021 , OLWASI LINDA

int main() {
    float num1, num2, sum, difference, product, division;

    
    printf("Enter the first number: ");
    scanf("%f", &num1);

    
    printf("Enter the second number: ");
    scanf("%f", &num2);

    
    sum = num1 + num2;

    difference = num1 - num2;

    product= num1*num2;

    division= num1/num2;

    
    printf("The sum of %.2f and %.2f is %.2f\n", num1, num2, sum);

    
    printf("The difference of %.2f and %.2f is %.2f\n", num1, num2, difference);
    
    
    printf("The product of %.2f and %.2f is %.2f\n", num1, num2, product);
     
     
    printf("The division of %.2f and %.2f is %.2f\n", num1, num2, division);


 
    printf("The sum and difference of %.2f and %.2f are %.2f and %.2f respectively\n", num1, num2, sum, difference);
     printf("The division and product of %.2f and %.2f are %.2f and %.2f respectively\n", num1, num2, division, product);

    return 0;
}
